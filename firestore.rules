// Chỉ cho người đã đăng nhập
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function authed() { return request.auth != null; }

    match /posts/{postId} {
      allow read: if true; // feed công khai
      allow create: if authed() && request.resource.data.userId == request.auth.uid;
      allow update: if authed() 
        && (request.resource.data.diff(resource.data).changedKeys().hasOnly(['likedBy','likeCount','caption','imageUrl'])
            || request.resource.data.userId == request.auth.uid);
      allow delete: if authed() && resource.data.userId == request.auth.uid;

      match /comments/{commentId} {
        allow read: if true;
        allow create: if authed() && request.resource.data.userId == request.auth.uid;
        allow delete: if authed() && request.auth.uid == resource.data.userId;
      }
    }
  }
}
